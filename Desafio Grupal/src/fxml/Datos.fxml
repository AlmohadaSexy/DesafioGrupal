<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fxml.DatosController">
   <bottom>
      <Button fx:id="btn_aceptar" mnemonicParsing="false" onAction="#aceptar" text="Cargar Mapa" BorderPane.alignment="CENTER_RIGHT" />
   </bottom>
   <center>
      <GridPane prefHeight="369.0" prefWidth="500.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" maxWidth="245.0" minWidth="10.0" prefWidth="107.0" />
          <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" maxWidth="388.0" minWidth="10.0" prefWidth="130.0" />
            <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" maxWidth="388.0" minWidth="10.0" prefWidth="133.0" />
            <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" maxWidth="388.0" minWidth="10.0" prefWidth="135.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Nodo" />
            <Label text="Conexion" GridPane.rowIndex="1" />
            <TextField fx:id="tf_nodo" promptText="Nodo" GridPane.columnIndex="1" />
            <ChoiceBox fx:id="cbx_2" prefWidth="150.0" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <ChoiceBox fx:id="cbx_1" prefWidth="150.0" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
            <Button fx:id="btn_nodo" mnemonicParsing="false" onAction="#addNodo" text="Añadir Nodo" GridPane.columnIndex="3" />
            <Button fx:id="btn_conexion" mnemonicParsing="false" onAction="#addConexion" text="Añadir Conexion" GridPane.columnIndex="3" GridPane.rowIndex="1" />
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="2">
               <children>
                  <TextField fx:id="tf_y" alignment="TOP_CENTER" prefHeight="0.0" prefWidth="132.0" promptText="Coordenada x" />
                  <TextField fx:id="tf_x" alignment="BOTTOM_CENTER" promptText="Coordenada y" />
               </children>
            </VBox>
            <Label text="Nodo Inicio" GridPane.rowIndex="2" />
            <ChoiceBox fx:id="cbx_inicio" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         </children>
      </GridPane>
   </center>
</BorderPane>
